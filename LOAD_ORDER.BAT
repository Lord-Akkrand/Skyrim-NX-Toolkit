@ECHO OFF

SETLOCAL

SET TOOLKIT_PATH=%~d0%~p0
SET SCRIPTS_PATH=%TOOLKIT_PATH%Scripts\
SET DIST_PATH=%SCRIPTS_PATH%dist\
SET TOOLKIT_EXE="%DIST_PATH%toolkit.exe"
SET PRISTINE=%TOOLKIT_PATH%DefaultIniFiles

SET ORIGINAL=%~f1
SET TARGET=%~f2
SET LOAD_ORDER=%3

SET PATH=%PATH%;%SCRIPTS_PATH%

>CON ECHO Starting up...

>CON ECHO toolkit.exe is set at %TOOLKIT_EXE%

>CON ECHO Akkrand's Load Order Script v1.0.2
PAUSE

ROBOCOPY "%PRISTINE%" "%TARGET%" /MIR /XF .gitignore

PUSHD "%SCRIPTS_PATH%"
%TOOLKIT_EXE% load_order "%ORIGINAL%" "%TARGET%" %LOAD_ORDER%
POPD

PAUSE

GOTO :EOF

:pythonError
>CON ECHO Error finding Python path